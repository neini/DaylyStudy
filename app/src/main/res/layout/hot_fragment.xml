<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/hot_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/recommend_tab_bg"
        app:tabGravity="center"
        app:tabIndicatorColor="#FFFFEA00"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#FFFFEA00"
        app:tabTextColor="#fff"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/hot_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</com.zhy.autolayout.AutoLinearLayout>