    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/course_list_ll"
            android:layout_width="0dp"
            android:layout_height="44dp"

            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/course_list_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/course_list_total_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp" />


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="44dp"
            android:background="#cacaca" />


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/course_list_ll_Filter"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/course_list_filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="筛选"
                android:textColor="#333333"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/course_list_filter_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp" />


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="44dp"
            android:background="#cacaca" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/course_list_ll_sort"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/course_list_sort_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="排序"
                android:textColor="#333333"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/course_list_sort_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp" />


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#cacaca" />

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/sort_spring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bwie.demo.daylystudy.view.MyListVIew
            android:id="@+id/sort_class_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.liaoinstan.springview.widget.SpringView>

